<h1>Listing tasks</h1>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Category</th>
    <th>Points</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.id %></td>
    <td><%= task.name %></td>
    <td><%= task.category %></td>
    <td><%= task.points %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
    <td>     </td>
    <td><%= link_to 'Vote up', :action => 'rate_up', :id => task.id %></td>
    <td><%= link_to 'Vote down', :action => 'rate_down', :id => task.id %></td>
  </tr>
<% end %>
</table>

